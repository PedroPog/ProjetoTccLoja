@inject LojaCamisa.Libraries.Login.LoginUsuario _usuario

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Athlete Apparel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesHome.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/stylesDetalhes.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LojaCamisa.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<body>
    <header>
        <nav class="header-bg navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <ul class="menu-1 navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="item-nav nav-link"></a>
                    </li>
                </ul>
                <div class="logo mx-auto">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/assets/img/LOGO5.svg" alt="Bootstrap">
                    </a>
                </div>
                <ul class="menu-2 navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        @if (_usuario.GetCliente() != null)
                        {
                            <a class="nav-link dropdown-toggle item-drop login" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span class="material-symbols-outlined">
                                    person
                                </span>
                                @_usuario.GetCliente().nome
                            </a>
                        }
                        else
                        {
                            <a class="nav-link item-drop login" role="button" asp-action="Login" asp-area="" asp-controller="Home">
                                <span class="material-symbols-outlined">
                                    person
                                </span>
                                Entrar
                            </a>
                        }
                        
                        <ul class="dropdown-menu">                   
                            @if(_usuario.GetCliente() != null)
                            {
                                <li><a class="dropdown-item" asp-action="PerfilCliente" asp-area="" asp-controller="Home" asp-route-id="@_usuario.GetCliente().idUsuario">Perfil</a></li>
                                @if (_usuario.GetCliente().tipo == 1)
                                {
                                    <li><a class="dropdown-item" asp-action="Index" asp-area="Adm" asp-controller="Home">Area Restrita</a></li>
                                }
                                <li><a class="dropdown-item" asp-action="Carrinho" asp-area="" asp-controller="Home">Carrinho</a></li>
                                <li><a class="dropdown-item" asp-action="LogoutCliente" asp-area="" asp-controller="Home">Logout</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <div class="containerfake"> <!--class="container"-->
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-5 bottom-0">
        <div class="container">
            <div class="row py-4">
                <div class="col-md-4">
                    <h5>Ajuda</h5>
                    <ul class="list-unstyled">
                        <li><a class="link text-white" href="#">Ajuda</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Fale conosco</h5>
                    <ul class="list-unstyled">
                        <li><a class="link text-white" href="#">Fale conosco</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Formas de Pagamento</h5>
                    <div class="d-flex">
                        <img class="me-2" src="~/assets/img/visa.svg" alt="Visa">
                        <img class="me-2" src="~/assets/img/mastercard.svg" alt="Mastercard">
                        <img class="me-2" src="~/assets/img/hipercard.svg" alt="Hipercard">
                    </div>
                </div>
            </div>
            <hr class="bg-white">
            <div class="row py-3">
                <div class="col-md-6">
                    <ul class="list-inline">
                        <li class="list-inline-item"><a class="link text-white" href="#">Brasil</a></li>
                        <li class="list-inline-item"><a class="link text-white" href="#">Termos de uso</a></li>
                        <li class="list-inline-item"><a class="link text-white" href="#">Política de privacidade</a></li>
                    </ul>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">© 2024 Athletic Apparel. Todos os direitos reservados.</p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
